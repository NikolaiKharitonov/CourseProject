<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE6E6"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#929090"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Розничная торговля"
            android:textColor="@color/white"
            android:textSize="22sp"></TextView>


    </LinearLayout>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/operationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#C4C4C4"
            android:onClick="operationsClick"
            android:text="Журнал операций"
            android:textColor="@color/black"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#C4C4C4"
            android:onClick="reportButtonClick"
            android:text="Отчёты"
            android:textColor="@color/black"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/suppliersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#C4C4C4"
            android:onClick="suppliersButtonClick"
            android:text="Поставщики"
            android:textColor="@color/black"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/suppliersButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#C4C4C4"
            android:onClick="programButtonClick"
            android:text="О программе"
            android:textColor="@color/black"
            android:textSize="18sp"></Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>